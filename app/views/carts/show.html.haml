%h2#cart-title FOOD ORDER CART

.cart
  %ul
    -@cart.add_items.each do |item|
      .product
        .cart-product-title=item.product.title
        %br

        =image_tag item.product.image, class: 'cart-image'
        %br

        Price: $#{item.product.price}
        %br

        Quantity: #{item.quantity}
        %br

        Total Price: #{item.total_price}
        %br
        
        =link_to 'Add one', add_item_add_path(:id => item), method: :post, class: 'cart-options'
        =link_to 'Reduce one', add_item_reduce_path(:id => item), method: :post, class: 'cart-options'
        =link_to 'Remove item', add_item_path(item), method: :delete, class: 'cart-options'

  %h3#total-shopping-cart TOTAL: $ #{@cart.total}

  =link_to 'Empty cart', cart_path(@current_cart), method: :delete, data: {confirm: 'Are you sure?'}, id: 'empty-cart'